---
import NavBar from "@/components/NavBar.astro";
import Footer from "@/components/Footer.astro";
import siteInfoJson from "@data/site-info.json";

type Props = {
  title?: string;
  description?: string;
  keywords?: string;
  author?: string;
};

const {
  title = siteInfoJson.title,
  description = siteInfoJson.description,
  keywords = siteInfoJson.keywords,
  author = siteInfoJson.author,
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Alex Brush Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Inter:wght@800&display=swap"
      rel="stylesheet"
    />

    <!-- Site Information -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <title>{title}</title>
  </head>
  <body class="bg-[#BFD7EA] overflow-x-hidden">
    <NavBar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
