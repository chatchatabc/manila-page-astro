---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "./layout.astro";
import Breadcrumbs from "@components/widgets/Breadcrumbs.astro";
import { Img } from "astro-imagetools/components";
import Markdown from "@components/widgets/Markdown.astro";
import { utilRemoveTrailSlash } from "src/utils/commonUtils";

interface Props {
  place: CollectionEntry<"places">;
}

const { place } = Astro.props as Props;

const relatedTopics = await getCollection(place.collection);
relatedTopics.sort(() => Math.random() - 0.5);

const { Content } = await place.render();
---

<Layout>
  <section class="max-w-7xl py-1 mx-auto px-4 lg:px-8">
    <Breadcrumbs />
  </section>
  <section class="max-w-7xl mx-auto px-4 lg:px-8">
    <div
      class="relative rounded-xl overflow-hidden pb-[50%] md:pb-[40%] lg:pb-[30%]"
    >
      <div class="absolute w-full h-full">
        <Img src={place.data.featuredImage} alt={place.data.title} />
      </div>
    </div>
  </section>
  <article class="max-w-7xl mx-auto px-4 lg:px-8">
    <section class="flex flex-wrap p-4 rounded-xl bg-blue-100">
      <!-- Left -->
      <section class="w-full lg:pr-4 lg:w-2/3">
        <Markdown>
          <Content />
        </Markdown>
      </section>

      <!-- Right -->
      <section class="w-1/3 hidden lg:block">
        <header>
          <h2 class="text-2xl font-bold">Related Topics</h2>
        </header>
        <ul class="flex flex-wrap">
          {
            [...relatedTopics].splice(0, 4).map((topic) => {
              return (
                <li class="p-2 w-full md:w-1/2 lg:w-full">
                  <div class="relative rounded-md overflow-hidden border-blue-900 pb-[70%]">
                    <div class="absolute w-full h-full top-0 rounded-lg overflow-hidden">
                      <Img
                        src={topic.data.featuredImage}
                        alt={topic.data.title}
                      />
                    </div>
                    <div class="absolute opacity-50 bottom-0 left-0 h-full w-full bg-gradient-to-t from-black via-transparent to-black" />
                    <p class="absolute bottom-0 text-xl text-white font-bold p-2">
                      {topic.data.title}
                    </p>
                  </div>
                </li>
              );
            })
          }
        </ul>
      </section>
    </section>
  </article>
</Layout>
