---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "./layout.astro";
import Breadcrumbs from "@components/widgets/Breadcrumbs.astro";
import { Img } from "astro-imagetools/components";
import Markdown from "@components/widgets/Markdown.astro";

interface Props {
  place: CollectionEntry<"places">;
}

const { place } = Astro.props as Props;

const relatedTopics = await getCollection(place.collection);
const filteredTopics = relatedTopics.filter(
  (topic) => topic.slug !== place.slug
);
filteredTopics.sort(() => Math.random() - 0.5);

const { Content } = await place.render();
---

<Layout>
  <!-- Hero Section -->
  <section>
    <!-- Container -->
    <div class="relative pb-[100%] md:pb-[50%] lg:pb-[35%]">
      <!-- Background -->
      <div class="absolute w-full h-full">
        <Img src={place.data.featuredImage} alt={place.data.title} />
      </div>

      <!-- Text -->
      <div
        class="bg-gradient-to-b opacity-75 from-cl via-transparent to-cd absolute h-full w-full bg-opacity-50 flex items-center justify-center"
      >
        <div class="p-8 rounded-lg overflow-hidden border relative">
          <div class="bg-black opacity-50 absolute h-full w-full top-0 left-0">
          </div>
          <h1 class="relative text-white text-4xl font-bold">
            {place.data.title}
          </h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="bg-white pb-16">
    <section class="max-w-7xl py-4 mx-auto px-4 lg:px-8">
      <Breadcrumbs />
    </section>

    <article class="max-w-7xl mx-auto px-4 lg:px-8">
      <section class="flex flex-wrap p-4 rounded-xl bg-cl">
        <!-- Left -->
        <section class="w-full lg:pr-4 lg:w-2/3">
          <Markdown>
            <Content />
          </Markdown>
        </section>

        <!-- Right -->
        <section class="hidden lg:block lg:w-1/3">
          <header>
            <h2 class="text-2xl font-bold">Related Topics</h2>
          </header>
          <ul class="flex flex-wrap">
            {
              [...filteredTopics].splice(0, 4).map((topic) => {
                return (
                  <li class="p-2 w-full md:w-1/2 lg:w-full">
                    <a
                      href={`/${place.collection}/${topic.slug}`}
                      class="group"
                    >
                      <div class="relative rounded-md border-blue-900 pb-[70%] overflow-hidden">
                        <div class="absolute w-full h-full top-0 rounded-lg duration-1000 group-hover:scale-110">
                          <Img
                            src={topic.data.featuredImage}
                            alt={topic.data.title}
                          />
                        </div>
                        <div class="absolute opacity-50 bottom-0 left-0 h-full w-full bg-gradient-to-t from-black via-transparent to-black" />
                        <p class="absolute bottom-0 text-xl text-white font-bold p-2">
                          {topic.data.title}
                        </p>
                      </div>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </section>
      </section>
    </article>

    <section class="max-w-7xl mx-auto px-4 mt-8 w-full lg:hidden">
      <header>
        <h2 class="text-2xl font-bold">Related Topics</h2>
      </header>
      <ul class="flex flex-wrap">
        {
          [...filteredTopics].splice(0, 4).map((topic) => {
            return (
              <li class="p-2 w-full md:w-1/2 lg:w-full">
                <a href={`/${place.collection}/${topic.slug}`} class="group">
                  <div class="relative rounded-md border-blue-900 pb-[70%] overflow-hidden">
                    <div class="absolute w-full h-full top-0 rounded-lg duration-1000 group-hover:scale-110">
                      <Img
                        src={topic.data.featuredImage}
                        alt={topic.data.title}
                      />
                    </div>
                    <div class="absolute opacity-50 bottom-0 left-0 h-full w-full bg-gradient-to-t from-black via-transparent to-black" />
                    <p class="absolute bottom-0 text-xl text-white font-bold p-2">
                      {topic.data.title}
                    </p>
                  </div>
                </a>
              </li>
            );
          })
        }
      </ul>
    </section>
  </section>
</Layout>
