---
import footerLinksJson from "@data/footer-links.json";
import { Img } from "astro-imagetools/components";

const { social, helpful, popular, sitemap } = footerLinksJson;
---

<footer class="border-t-2 mt-8">
  <section
    class="container mx-auto flex flex-col-reverse px-4 py-2 lg:flex-row lg:px-8"
  >
    <!-- Left -->
    <section class="flex flex-col justify-center lg:w-1/3">
      <header>
        <h1
          class="font-alex text-7xl text-center bg-clip-text text-transparent bg-gradient-to-r from-[#2B5F8F] to-[#36A0F6]"
        >
          Manila
        </h1>
      </header>
      <nav>
        <ul class="flex justify-center space-x-2">
          {
            social.map((link) => {
              return (
                <li>
                  <a class="h-8 w-8 block" href={link.href}>
                    <Img src={link.icon} alt={link.name} />
                  </a>
                </li>
              );
            })
          }
        </ul>
      </nav>
    </section>

    <!-- Right -->
    <section class="flex flex-wrap my-8 lg:flex-row lg:w-2/3">
      <section class="w-1/2 md:w-1/3">
        <header>
          <h1 class="text-lg">Popular Links</h1>
        </header>
        <nav class="p-2">
          <ul>
            {
              popular.map((link) => {
                return (
                  <li>
                    <a class="block hover:opacity-50" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </nav>
      </section>
      <section class="w-1/2 md:w-1/3">
        <header>
          <h1 class="text-lg">Helpful Information</h1>
        </header>
        <nav class="p-2">
          <ul>
            {
              helpful.map((link) => {
                return (
                  <li>
                    <a class="block hover:opacity-50" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </nav>
      </section>
      <section class="w-1/2 md:w-1/3">
        <header>
          <h1 class="text-lg">Sitemap</h1>
        </header>
        <nav class="p-2">
          <ul>
            {
              sitemap.map((link) => {
                return (
                  <li>
                    <a class="block hover:opacity-50" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </nav>
      </section>
    </section>
  </section>
  <p class="border-t-2 text-center text-white p-2 mt-4">
    copyright by chatchatabc
  </p>
</footer>
