---
import Layout from "@layouts/layout.astro";
import { getCollection, CollectionEntry } from "astro:content";
import { Img } from "astro-imagetools/components";
import Markdown from "@components/widgets/Markdown.astro";
import Breadcrumbs from "@components/widgets/Breadcrumbs.astro";

export async function getStaticPaths() {
  const tripsCollection = await getCollection("trips");

  return tripsCollection.map((trip) => {
    return {
      params: {
        trip: trip.slug,
      },
      props: {
        trip,
      },
    };
  });
}

interface Props {
  trip: CollectionEntry<"trips">;
}

const { trip } = Astro.props as Props;

const { Content } = await trip.render();
---

<Layout>
  <section class="max-w-7xl py-1 mx-auto px-4 lg:px-8">
    <Breadcrumbs />
  </section>
  <section class="max-w-7xl mx-auto px-4 lg:px-8">
    <div
      class="relative rounded-xl overflow-hidden pb-[50%] md:pb-[40%] lg:pb-[30%]"
    >
      <div class="absolute w-full h-full">
        <Img src={trip.data.featuredImage} alt={trip.data.title} />
      </div>
    </div>
  </section>
  <article class="max-w-7xl mx-auto px-4 lg:px-8">
    <header class="py-8">
      <h1 class="text-7xl font-alex">{trip.data.title}</h1>
      <p class="text-gray-700">{trip.data.summary}</p>
    </header>
    <section class="flex flex-wrap p-4 rounded-xl bg-blue-100">
      <section class="pr-4 w-full lg:w-2/3">
        <Markdown>
          <Content />
        </Markdown>
      </section>
      <section class="w-full lg:w-1/3">
        <header>
          <h2 class="text-xl font-bold lg:hidden">Gallery</h2>
        </header>
        <ul class="flex flex-wrap">
          {
            [...trip.data.images].splice(0, 5).map((imageUrl) => {
              console.log(imageUrl);
              return (
                <li class="p-2 w-full md:w-1/2 lg:w-full">
                  <div class="relative border-blue-900 pb-[50%]">
                    <div class="absolute w-full h-full top-0 rounded-lg overflow-hidden">
                      <Img src={imageUrl} alt={trip.data.title} />
                    </div>
                  </div>
                </li>
              );
            })
          }
        </ul>
      </section>
    </section>
  </article>
</Layout>
