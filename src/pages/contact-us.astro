---
import Layout from "@layouts/layout.astro";
import { Icon } from "astro-icon";
---

<Layout>
  <section class="max-w-7xl mx-auto px-4 lg:px-8">
    <header>
      <h1 class="my-8 text-center text-4xl">Contact Us</h1>
    </header>

    <section class="relative flex">
      <!-- Left -->
      <section class="p-8 bg-white w-full mx-auto">
        <header>
          <h2 class="text-2xl">Send message</h2>
        </header>
        <form class="flex flex-wrap">
          <label class="p-2 w-full md:w-1/2">
            <span class="block">First Name:</span>
            <input placeholder="First Name" class="border p-2 w-full" />
          </label>
          <label class="p-2 w-full md:w-1/2">
            <span class="block">Last Name:</span>
            <input placeholder="Last Name" class="border p-2 w-full" />
          </label>
          <label class="p-2 w-full md:w-1/2">
            <span class="block">Email:</span>
            <input placeholder="Email" class="border p-2 w-full" />
          </label>
          <label class="p-2 w-full md:w-1/2">
            <span class="block">Mobile:</span>
            <input placeholder="Mobile" class="border p-2 w-full" />
          </label>
          <label class="w-full p-2">
            <span class="block">Message:</span>
            <textarea placeholder="Message" class="border p-2 w-full"
            ></textarea>
          </label>
          <button class="bg-blue-500 text-white p-2 w-full">Send</button>
        </form>
      </section>
    </section>
  </section>
</Layout>
