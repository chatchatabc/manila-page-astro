---
import Layout from "@layouts/layout.astro";
import { getCollection, CollectionEntry } from "astro:content";
import { Img } from "astro-imagetools/components";
import Markdown from "@components/widgets/Markdown.astro";
import Breadcrumbs from "@components/widgets/Breadcrumbs.astro";

export async function getStaticPaths() {
  const placesCollection = await getCollection("places");

  return placesCollection.map((place) => {
    return {
      params: {
        place: place.slug,
      },
      props: {
        place,
      },
    };
  });
}

interface Props {
  place: CollectionEntry<"places">;
}

const { place } = Astro.props as Props;

const { Content } = await place.render();
---

<Layout>
  <section class="max-w-7xl py-1 mx-auto px-4 lg:px-8">
    <Breadcrumbs />
  </section>
  <section class="max-w-7xl mx-auto px-4 lg:px-8">
    <div class="relative pb-[30%] rounded-xl overflow-hidden">
      <div class="absolute w-full h-full">
        <Img src={place.data.featuredImage} alt={place.data.title} />
      </div>
    </div>
  </section>
  <article class="max-w-7xl mx-auto px-4 lg:px-8">
    <header class="py-8">
      <h1 class="text-7xl font-alex">{place.data.title}</h1>
      <p class="text-gray-700">{place.data.summary}</p>
    </header>
    <section class="flex p-4 rounded-xl bg-blue-100">
      <section class="w-2/3 pr-4">
        <Markdown>
          <Content />
        </Markdown>
      </section>
      <ul class="w-1/3">
        {
          [...place.data.images].splice(0, 5).map((imageUrl) => {
            console.log(imageUrl);
            return (
              <li class="p-2">
                <div class="relative pb-[50%] border-blue-900">
                  <div class="absolute w-full h-full top-0 rounded-lg overflow-hidden">
                    <Img src={imageUrl} alt={place.data.title} />
                  </div>
                </div>
              </li>
            );
          })
        }
      </ul>
    </section>
  </article>
</Layout>
